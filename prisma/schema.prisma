datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
model doctors {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId 
  name  String 
  email String
  password String
  specialization String
  contactInfo String
}

model patients {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String
  password String
  contactDetails String
  medicalHistory String
}

model appointments {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  doctorId String
  patientId String
  dateTime DateTime
  notes String
}